{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@woco/web/*": ["src/web/*"],
      "@woco/schema/*": ["src/schema/*"]
    },

    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "types": ["jest"]
  },
  "include": ["src", "**/*.test.ts", ".storybook"]

}
